
@{
    Layout = "~/Views/Shared/_KLayout.cshtml";
}

@section MyCSS{
    <style>
        table {
            font-family: arial, sans-serif;
            color: black;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #f8f8f8;
